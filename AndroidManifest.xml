<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ss.staysafe"
    android:versionCode="9"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

         
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
   
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />	
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>

    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/android"
        android:label="@string/app_name" android:debuggable="false">
        <activity
            android:name="com.ss.staysafe.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
         	android:theme="@android:style/Theme.Black">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ss.staysafe.VideoRec"
            android:label="@string/title_activity_video_rec" >
        </activity>
        <activity
            android:name="com.ss.staysafe.About"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_about"
            android:theme="@android:style/Theme.Light" >
        </activity>
        <activity
            android:name="com.ss.staysafe.AddCont"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_add_cont"
            android:theme="@android:style/Theme.Light"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.ss.staysafe.CallScreen"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_call_screen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
         <activity
            android:name="com.ss.staysafe.Settings"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/action_settings"
            android:theme="@android:style/Theme.Light" >
        </activity>
        
        <activity
            android:name="com.ss.staysafe.FakeCallMain"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_fake_call_main"
            android:theme="@android:style/Theme.Light"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.ss.staysafe.Help"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_help"
            android:theme="@android:style/Theme.Light" >
        </activity>
        <activity
            android:name="com.ss.staysafe.InCall"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_in_call"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
    
    </application>

</manifest>